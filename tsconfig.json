{
    "compilerOptions": {
      "module": "ESNext",
      "target": "ES2022",
      "moduleResolution": "bundler",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "allowImportingTsExtensions": false,
      "noEmit": false,
      "outDir": "./dist",
      "baseUrl": "./",
      "typeRoots": ["./src/types"],
      "skipLibCheck": true,
      "paths": {
        "@/*": ["src/*"],
        "@/config/*": ["src/config/*"],
        "@/features/*": ["src/features/*"],
        "@/plugins/*": ["src/plugins/*"],
        "@/utils/*": ["src/utils/*"],
        "@/services/*": ["src/services/*"]
      }
    },
    "include": ["src/**/*"],
    "exclude": [
      "node_modules",
      "dist",
      "**/*.test.ts",
      "**/*.spec.ts"
    ]
  }
  